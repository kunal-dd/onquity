{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "dist",
    "incremental": true,
    "types": [
      "reflect-metadata",
      "node"
    ],
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ],
}